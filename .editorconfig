# EditorConfig for platform-gradle-plugins
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 120
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

# ktlint rule configuration
# NOTE: Your IDE may show "property not supported" warnings for these ktlint-specific properties.
# This is normal - your IDE doesn't recognize them, but ktlint does. These warnings can be safely ignored.
# See: https://pinterest.github.io/ktlint/latest/rules/configuration-ktlint/
ktlint_standard_max-line-length = disabled

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
